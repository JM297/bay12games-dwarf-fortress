@keyframes fade {
  from {
    opacity 0.4
  }
  to {
    opacity 1
  }
}
  
.fade
  animation-name fade
  animation-duration 1s
  animation-fill-mode forwards

.welcome
  margin-bottom 20px
  h1
    text-align center;
    font-size 56px
  #tagline
    text-align center
    font-style italic
    font-size 20px

.mySlides
  img
    width 75%
  p
    text-align: center;

.slideshow-container
  position relative
  margin auto

.prev, .next
  cursor pointer
  position absolute
  top 50%
  width auto
  margin-top -22px
  padding 16px
  font-weight bold
  font-size 18px
  transition 1.6s ease
  border-radius 0 3px 3px 0

.next
  right 0
  border-radius: 3px 0 0 3px;

.prev:hover, .next:hover
  background-color rgba(0, 0, 0, 0.8);